<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<DialogPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.NewStudentDialogController">
<content>
    <GridPane hgap="10" vgap="10">
        <Label text="Create Student" textAlignment="CENTER" underline="true" GridPane.columnSpan="2" GridPane.halignment="CENTER">
            <font>
                <Font size="15.0" />
            </font>
        </Label>
        <Label text="First name: " GridPane.rowIndex="1" />
        <TextField fx:id="studentFirstNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Middle Name: " GridPane.rowIndex="2" />
        <TextField fx:id="studentMiddleNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Last Name: " GridPane.rowIndex="3" />
        <TextField fx:id="studentLastNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="Email: " GridPane.rowIndex="4" />
        <TextField fx:id="studentEmailTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Login ID: " GridPane.rowIndex="5" />
        <TextField fx:id="studentLoginIdTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Label text="Login Password: " GridPane.rowIndex="6" />
        <TextField fx:id="studentLoginPasswordTextField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>
</content>
</DialogPane>
